<%= form_for([:admin,@user]) do |form| %>
	<p>
		<%=form.label :first_name %>
		<%=form.text_field :first_name %>
	</p>
	<p>
		<%=form.label :last_name %>
		<%=form.text_field :last_name %>
	</p>
	<p>
		<%=form.label :about %>
		<%=form.text_area :about,cols: 50, rows: 5 %>
	</p>
	<p>
		<%=form.label :email %>
		<%=form.text_field :email %>
	</p>
	<p>
		<%=form.submit("UPDATE") %>
	</p>
<% end %>