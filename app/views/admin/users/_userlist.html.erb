<table align="center" border="1">
<thead>
		<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>About</th>
		<th>Email</th>
		<th>CreateD</th>
		<th colspan="3">Action</th>
	</tr>	
</thead>		
<tbody>	
<% @user.each do |user| %>
<tr>
	<td><%= user.first_name %> <span class="<%=user.super_admin ? "sp-class" : ""%>"><%=user.super_admin ? "Master" : ""%></span></td>
	<td><%= user.last_name %></td>
	<td><%= user.about %></td>
	<td><%= user.email %>
	<td><%= time_data(user.created_at) %></td>
	<td><%= link_to " Edit ", edit_admin_user_path(user) %></td>	
	<td><%= link_to " Make Super ", make_superadmin_path(user), remote: true %>	</td>
	<td><%= link_to "Show", admin_user_path(user) %>	</td>
	<td><%= link_to "Change Password", change_password_admin_user_path(user) %>	</td>

</tr>
</tbody>
<% end %>
</table>
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">    
<%= will_paginate @user %>
  </ul>
</nav>
